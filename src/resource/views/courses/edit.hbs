<div class="m-4">
  <h3>Sửa Khóa Học</h3>
    <form class="m-4" method="POST" action="/courses/{{course._id}}/edit">
        <div class="form-group">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>

        <div class="form-group">
          <label for="age" class="form-label">Age</label>
          <input type="text" class="form-control" value="{{course.age}}" id="age" name="age">
        </div>

        <div class="form-group">
          <label for="address" class="form-label">Address</label>
          <input type="text" class="form-control" value="{{course.address}}" id="address" name="address">
        </div>

        <div class="form-group">
          <label for="price" class="form-label">Price</label>
          <input type="text" class="form-control" value="{{course.price}}" id="price" name="price">
        </div>
        
        <div class="form-group">
          <label for="img" class="form-label">Img</label>
          <input type="text" class="form-control" value="{{course.img}}" id="img" name="img">
        </div>

        <div class="form-group">
          <label for="videoId" class="form-label">VideoId</label>
          <input type="text" class="form-control" value="{{course.videoID}}" id="videoID" name="videoId">
        </div>
        <button type="submit" class="btn btn-primary">Sửa Khóa Học</button>
  </form>

</div>